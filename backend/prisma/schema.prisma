generator client {
  provider = "prisma-client-js"
  previewFeature = ["createMany"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  email             String   @unique
  name              String
  username          String   @unique
  password          String
  address           String
  phone             String   @unique
  created_at        DateTime @default(now())
  status            Boolean  @default(true)
}

enum Level {
  BASIC
  INTERMEDIATE
  ADVANCED
  MIXED
}

model Course {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  level  Level
  url    String?
  skills String[]
}

model jobs {
 id     String   @id @default(auto()) @map("_id") @db.ObjectId
  employmentType  String
  industries      String
  jobFunction     String
  seniorityLevel  String
  company         String
  companyId       Int
  context         Json
  date            DateTime
  description     String
  education       String
  location        String
  monthsExperience Int
  postId          Int
  postUrl         String?  // Replace `url` with `postUrl` if this is correct
  salHigh         Int?
  salLow          Int?
  salary          String?
  title           String
}



